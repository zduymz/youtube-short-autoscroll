{
  "manifest_version": 3,
  "name": "YouTube Shorts Auto-Scroll",
  "version": "1.0.0",
  "description": "Automatically scrolls to the next video when a YouTube Short ends",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/shorts/*",
        "https://www.youtube.com/shorts/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

